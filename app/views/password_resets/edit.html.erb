<% set_meta_tags title: t('.title') %>
<div class="flex justify-center text-center">
  <div class="">
    <div class="col col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class="font-bold text-3xl my-5"><%= t('.title') %></h1>
      <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :email, class: 'w-full my-3 p-3' %>
          <div class='w-full my-3 p-3 bg-white'><%= @user.email %></div>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'w-full my-3 p-3' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'w-full my-3 p-3' %>
        </div>
        <div class="actions">
          <p class="text-center">
            <%= f.submit class: 'btn btn-accent' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>