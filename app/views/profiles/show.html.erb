<% set_meta_tags title: t('.title'), og: { title: t('.title') } %>
<div class="text-center">
  <div class="p-4 m-5">
    <div class="text-4xl md:grid justify-items-stretch">
      <div class="font-bold border-b-2 border-syuiro md:w-2/3 xl:w-1/3 justify-self-center"><%= t('.title') %></div>
      <div><%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-accent' %></div>
    </div>
  </div>
</div>
<div class="flex justify-center text-center">
  <div class="text-base md:text-xl">
    <div class="mb-3">
      <div class="font-bold", scope="row"><%= t(User.human_attribute_name(:name)) %></div>
      <div class="bg-white"><%= current_user.name %></div>
    </div>
    <div class="mb-3">
      <div class="font-bold", scope="row"><%= t(User.human_attribute_name(:email)) %></div>
      <div class="bg-white"><%= current_user.email %></div>
    </div>
    <div class="mb-3">
      <div class="font-bold", scope="row"><%= t(User.human_attribute_name(:address)) %></div>
      <div class="bg-white">
        <% if current_user.address %>
          <%= current_user.address %>
        <% else %>
          <div class="bg-white p-3"></div>
        <% end %>
      </div>
    </div>
    <div class="mb-3">
      <div class="font-bold", scope="row">恋人の<%= t(User.human_attribute_name(:name)) %></div>
      <% if @partner %>
        <div class="bg-white"><%= @partner.name %></div>
      <% else %>
        <div>恋人がまだ登録されていません</div>
      <% end %>
    </div>
    <div>
      <div class="font-bold", scope="row"><%= t(User.human_attribute_name(:avatar)) %></div>
      <div class="flex justify-center"><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '100x100' %></div>
    </div>
  </div>
</div>