<%= content_for(:title, t('.title')) %>
<div class="text-center">
  <div class="p-4 m-5">
    <div class="text-4xl md:flex justify-center">
      <div class="font-bold border-b-2 border-syuiro md:w-2/3 xl:w-1/3"><%= t('.title') %></div>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-accent' %>
    </div>
  </div>
</div>
 <div class="p-4 m-5 flex justify-center">
    <div class="text-1xl">
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:address)) %></th>
          <td><%= current_user.address %></td>
        </tr>
        <tr>
          <th scope="row">恋人の<%= t(User.human_attribute_name(:name)) %></th>
          <% if @partner %>
            <td><%= @partner.name %></td>
          <% else %>
            <td>恋人がまだ登録されていません</td>
          <% end %>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:avatar)) %></th>
          <td><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '100x100' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
