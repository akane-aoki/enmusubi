<%= content_for(:title, t('.title')) %>
<div class="text-center text-gray-700">
  <div class="p-4 m-5">
    <div class="text-4xl">
      <div class="font-bold"><%= t('.title') %></div>
    </div>
  </div>
</div>
<!-- 会う日一覧 -->
<div class='row'>
  <div class='col-md-9'>
    <div class="p-4 m-5 text-2xl">
      <div class="text-center font-bold">会えていない日が</div>
    </div>
    <div class="text-center text-gray-700 bg-white rounded-lg text-6xl p-4 m-5">
      <div class="font-bold"><%= @not_meet_day %>日</div>
    </div>
    <div class="p-4 m-5 text-2xl">
      <div class="text-center font-bold">になったら、</div>
    </div>
    <div class="p-4 m-5 text-2xl">
      <div class="text-center font-bold">次会ったときに</div>
    </div>
    <div class="text-center text-gray-700 bg-white rounded-lg text-6xl p-4 m-5">
      <div class="font-bold"><%= @our_reward %></div>
    </div>
  </div>
</div>
<div class="flex justify-center">
  <button class="btn"><%= t('defaults.edit') %></button>
</div>