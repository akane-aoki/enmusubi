<%= content_for(:title, t('.title')) %>
<div class="text-center">
  <div class="p-4 m-5">
    <div class="text-4xl">
      <div class="font-bold"><%= t('.title') %></div>
    </div>
  </div>
</div>
<!-- 会う日一覧 -->
<div class='row md:flex justify-center'>
  <div class='md:w-2/3 lg:w-1/3 text-center'>
    <div class="p-2 m-2 text-2xl md:text-3xl">
      <div class="text-center font-bold">次会う日は</div>
    </div>
    <div class="text-center bg-white rounded-lg text-3xl md:text-5xl p-4 mb-3">
      <div class="font-bold">
        <% if @meet_first && @meet_first >= @today %>
          <%= l @meet_first, format: :long %>
        <% else %>
          まだ決まっていません
        <% end %>
      </div>
    </div>
    <div class="flex justify-center">
      <%# <%= link_to t('defaults.edit'), edit_meet_path(meet_attr.id), class: "" %>
    </div>
  </div>
</div>
<div class='row md:flex justify-center'>
  <div class='md:w-2/3 text-center bg-white rounded-lg text-center'>
    <div class="p-2 m-3 text-2xl">
      <div class="text-center font-bold">今まで会った日</div>
    </div>
    <div class="p-4 m-5">
      <div class="text-center">
        <% if @meets %>
          <% @meets.each do |meets| %>
            <ul class="text-2xl"><%= l meets %></ul>
          <% end %>
        <% else %>
          今まで会った日はまだありません
        <% end %>
      </div>
    </div>
  </div>
</div>
