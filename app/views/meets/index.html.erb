<%= content_for(:title, t('.title')) %>
<div class="text-center">
  <div class="p-4 m-5">
    <div class="text-4xl">
      <div class="font-bold"><%= t('.title') %></div>
    </div>
  </div>
</div>
<!-- 会う日一覧 -->
<div class='row md:flex justify-center'>
  <div class='md:w-2/3 text-center'>
    <div class="p-2 m-2 text-2xl md:text-3xl">
      <div class="text-center font-bold">次会う日は</div>
    </div>
    <div class="text-center bg-white rounded-lg text-3xl md:text-5xl p-4">
      <div class="font-bold">
        <% if @meet_first.meet_day_start && @meet_first.meet_day_start >= @today %>
          <%= l @meet_first.meet_day_start, format: :long %>
        <% else %>
          まだ決まっていません
        <% end %>
      </div>
    </div>
    <div class="flex justify-center">
      <%= link_to edit_meet_path(@meet_first), class: "" do %>
        <%= icon('far', 'pen-to-square fa-1x') %>
      <% end %>
      <%= link_to new_meet_path do %>
        <button class="btn btn-accent my-3">次会う日を決める</button>
      <% end %>
    </div>
  </div>
</div>
<div class='row md:flex justify-center'>
  <div class='md:w-2/3 bg-white rounded-lg text-center'>
    <div class="pt-2 mt-3 text-2xl text-center">
      <div class="text-center font-bold">今まで会った日</div>
    </div>
    <div class="p-2 m-2">
      <% if @meets.present? %>
        <%= render partial: 'meet', collection: @meets, as: 'meets' %>
      <% else %>
        <p class="text-xl">今まで会った日はまだありません</p>
      <% end %>
    </div>
  </div>
</div>
