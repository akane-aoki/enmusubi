<% set_meta_tags title: t('.title') %>
<div class="text-center">
  <div class="p-4 m-5">
    <div class="text-2xl md:text-3xl md:flex justify-center">
      <div class="font-bold border-b-2 border-syuiro md:w-2/3 xl:w-1/3"><%= t('.title') %></div>
    </div>
    <div class="">
      <div class="text-xl mt-10">パートナーの招待コードを入力してください</div>
      <%= form_with model: @user, url: invite_path, local: true do |f| %>
        <div class="m-7">
          <%= f.text_field :invitation_digest, class: 'md:p-5', placeholder: "パートナーの招待コード", size: "30x2" %>
        </div>
        <%= f.submit t('defaults.register'), class: 'btn btn-accent text-xl' %>
      <% end %>
    </div>
  </div>
</div>