<div class="flex justify-center">
  <%= form_with model: effort, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="m-7 text-2xl">
      <%= f.label :body %><br>
      <%= f.text_area :body, size: "30x2" %>
    </div>
    <%= f.submit t('defaults.create'), class: 'btn btn-accent text-xl' %>
  <% end %>
</div>